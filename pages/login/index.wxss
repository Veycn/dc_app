.p-container {
  width: 100%;
  height: 100%;
}

.p-container .logo {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 280rpx;
}

.p-container .logo .pic {
  width: 322rpx;
  height: 150rpx;
  background: #ccc;
}


.p-container .logo .title {
  font-size: 30rpx;
  padding: 20rpx;
  color:rgba(181,181,181,1);
}


.btn {
  margin-top: 100rpx;
  height: 100rpx;
  width: 394rpx;
  border-radius: 50rpx;
  background: #15DA7F;
  display: flex;
  justify-content: center;
  align-items: center;
}
.btn .login-text {
  color: #fff;
  font-size: 48rpx;
}
.btn::after{
  border: 0;
}
