<view class="info">
  <text class="buynum">{{5}}人已购</text>
  <view class="star">
    <text class="starnum">{{999}}</text>
    <image src='/assets/icon/star.png' class="img"></image>
  </view>
</view>

<view class="produce">
  <text>课程介绍</text>
</view>
<view class="produceInfo">
  <scroll-view scroll-y style="height: 600rpx;">
    <view class="title">
      <text>{{item.videoTitle}}</text>
    </view>
    <view class="nameTime">
      <text class="name">讲师： {{teacherName}}</text>
      <text class="time">{{course['courseDuration']}}</text>
    </view>
    <view class="courseInfo">
      <text>{{course.courseIntro}}</text>
    </view>
  </scroll-view>
</view>
<view class="courseArea">
  <view class="sameCourse" bindtap="toSameCourse"> 同类课程  》</view>
  <block wx:for="{{courseInfo}}" wx:key="{{item.id}}">
    <s-descourse courseId="{{item.courseId}}" group-info="{{item['groupInfo']}}" 
    title="{{item.courseName}}"    
    section="{{item.knowledgePoint}}" course-duration="{{item.courseDuration}}" teacherName="{{item.teacherName}}"
    teacherImage="{{item.teacherAvatar?item.teacherAvatar:'/assets/icon/pic.png'}}"
    sales="{{item['sales']}}" section="{{item['section']}}"
    courseImage="{{item.courseAvatar}}" stars="{{item.courseStars}}"
    price="{{item.coursePrice}}"/>
  </block>
  <view class="freeCourse" bindtap="toFreeCourse"> 免费区  》</view>
  <block wx:for="{{courseInfo}}" wx:key="{{item.id}}">
    <s-descourse courseId="{{item.courseId}}" group-info="{{item['groupInfo']}}" 
    title="{{item.courseName}}"    
    section="{{item.knowledgePoint}}" course-duration="{{item.courseDuration}}" teacherName="{{item.teacherName}}"
    teacherImage="{{item.teacherAvatar?item.teacherAvatar:'/assets/icon/pic.png'}}"
    sales="{{item['sales']}}" section="{{item['section']}}"
    courseImage="{{item.courseAvatar}}" stars="{{item.courseStars}}"
    price="{{0.0}}"/>
  </block>
</view>

<view class="p-w">
  <view class="price" bindtap="toPay" data-type="0">{{course.coursePrice}}元购买</view>
</view>