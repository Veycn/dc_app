/* pages/courseinfo/index.wxss */

page {
  background-color: #f5f5f5;
}

.publicVideo {
  width: 100%;
  height: 320rpx;
  position: relative;
}

.publicVideo video {
  width: 100%;
  height: 320rpx;
}

.playImg {
  width: 66rpx;
  height: 66rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-top: -33rpx;
  margin-left: -33rpx;
}

.produce {
  text-align: center;
  margin-top: 60rpx;
  font-size: 36rpx;
  color: #1c1b1b;
  font-family: PingFang SC;
  font-weight: bold;
  height: 72rpx;
}

.produce text {
  padding-bottom: 14rpx;
  border-bottom: 10rpx solid #17e871;
}

.produceInfo {
  margin: 32rpx auto 0;
  height: 736rpx;
  width: 606rpx;
  border: 1rpx solid #FBFBFB;
  border-radius: 10rpx;
  background-color: white;
  padding: 0 50rpx;
  font-family: PingFang SC;
  font-weight: bold;
}

.title {
  font-size: 30rpx;
  margin-top: 74rpx;
}

.nameTime {
  margin-top: 40rpx;
  display: flex;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
}

.name {
  margin-right: 54rpx;
}

.courseInfo {
  font-size: 24rpx;
  margin-top: 70rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 48rpx;
}

.price {
  height: 68rpx;
  width: 558rpx;
  margin: 0 auto;
  position: fixed;
  left: 96rpx;
  bottom: 40rpx;
  color: white;
  font-family: PingFang SC;
  font-weight: bold;
  font-size: 30rpx;
  border-radius: 34rpx;
  display: flex;
}


.price .c {
  width: 50%;
  height: 100%;
  line-height: 68rpx;
  text-align: center;
}
.price .a {
  background-color: rgb(26,215,134);
  border-top-left-radius: 34rpx;
  border-bottom-left-radius: 34rpx;
}

.price .b {
  background-color: #3699FF;
  border-bottom-right-radius: 34rpx;
  border-top-right-radius: 34rpx;
}


/* 隐藏滚动条 */
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}
