<!--pages/customize/index.wxml-->
<!-- 未检测过 -->
<view wx:if="{{hasCustomize==false}}" class="customize">
  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{imgUrls}}" wx:key="{{index}}">
      <swiper-item>
        <image src="{{item}}" class="slide-image" />
      </swiper-item>
    </block>
  </swiper>
  <view class="tip">
    <image src="/assets/pic/tip.png"></image>
  </view>
  <view class="startTest">
    <image src="/assets/pic/startTest.png"></image>
  </view>
</view>


<!-- 已检测过 -->
<view wx:elif="{{hasCustomize==true}}" class="customized">
  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{video}}" wx:key="{{item.courseId}}">
      <swiper-item>
        <image id="myVideo{{item.courseId}}" src="{{item.courseCoverUrl}}" data-index="{{item.courseId}}" bindtap="publicInfo"></image>
      </swiper-item>
    </block>
  </swiper>

<view class="recommend">
  <image src="/assets/pic/Image.png" />
  <text class="recommendText">检测推荐</text>
</view>


<block wx:for="{{descourseList}}" wx:key="{{item.courseId}}" >
<s-descourse title="{{item.courseName}}" section="{{item.knowledgePoint}}" buynum="{{item.courseDuration}}" teachecName="{{item.teacherName}}" teacherImage="{{item.teacherAvatar?item.teacherAvatar:'/assets/icon/pic.png'}}" courseImage="{{item.courseAvatar}}" courseId="{{item.courseId}}" />
</block>

<block wx:for="{{desgrcourseList}}" wx:key="index">
<s-desgrcourse retime="{{clock}}" title="{{item.title}}"  courseImage="{{item.courseImage}}" groupneed="{{item.groupneed}}"/>
</block>
