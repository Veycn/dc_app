<!--pages/search/index.wxml-->
<view class="search">
  <input type="text"  focus bindinput="keywords"/>
  <image src='/assets/icon/sousuo.png' bindtap="search" />
 </view>
 
 <view class="courseList" wx:if='{{hasList}}'>
   <view class="listItem"  wx:for='{{courseList}}' wx:key='index' data-item="{{item.courseName}}" bindtap="showCourse">
     <image src='/assets/icon/sousuo.png' />
     <text catchtap="showCourse" data-item="{{item.courseName}}">{{item.courseName}}</text>
   </view>
 </view>
 <!-- 课程卡片 -->
 <block wx:for="{{course}}" wx:key="courseId" wx:if="{{!hasList}}">
  <s-descourse courseId="{{item.courseId}}"
    title="{{item.courseName}}" course-duration="{{item.courseDuration}}" teacherName="{{item.teacherName}}"
    teacherImage="{{item.teacherAvatar?item.teacherAvatar:'/assets/icon/pic.png'}}"
    sales="{{item['sales']}}" section="{{item['section']}}"
    courseImage="{{item.courseAvatar}}" stars="{{item.courseStars}}"
    price="{{item.coursePrice}}" videoId="{{item.ossVideoId}}"/>
</block>

 <!-- 历史记录 -->
 <view class="history" wx:if="{{storageFlag}}">
     <text class="tip">历史记录</text>
     <text class="clear" bindtap="clearHistory">清除历史记录</text>
     <view class="list">
       <view class="item" wx:for="{{storageList}}" wx:key="index" bindtap="showCourse" data-item="{{item}}">{{item}}</view>
     </view>
 </view>

 <view class="noSearchData" wx:if="{{searchFlag}}">抱歉！没有查询到你想要搜索的内容，请换个关键词试试。</view>
 