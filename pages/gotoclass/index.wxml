<video id="myVideo" bindtap="doubleTap"  bindtouchstart="touchStart" bindtouchend="touchEnd" src="{{course.playURL}}" autoplay="{{false}}" controls bindtimeupdate="update" data-index="{{index}}"
  auto-pause-if-navigate objectFit="fill"></video>
  <view class="info">
    <text class="buynum">{{courseInfo.courseSales}}人已购</text>
    <view class="star">
      <text class="starnum">{{courseInfo.courseStars}}</text>
      <image src='/assets/icon/star.png' wx:if="{{isStar}}" class="img" bindtap="cancelStar"></image>
      <image src='/assets/icon/star_active.png' wx:else class="img" bindtap="cancelStar"></image>
    </view>
  </view>

<view class="produce">
  <text>课程介绍</text>
</view>
<view class="produceInfo">
  <view class="title">
    <text>{{courseInfo.courseName}}</text>
  </view>
  <view class="nameTime">
    <text class="name">讲师： {{teacherName}}</text>
    <text class="time">{{courseDuration}}</text>
  </view>
  <view class="courseInfo">
    <text>{{courseInfo.courseIntro}}</text>
  </view>
</view>