<swiper  autoplay="{{autoplay}}" current="{{current}}" >
  <block wx:for="{{video}}" wx:key="{{index}}">
    <swiper-item catchtouchmove="stopTouchMove">
        <video id="myVideo{{index}}" src="{{item.url}}" controls bindtimeupdate="update" data-index="{{index}}" auto-pause-if-navigate objectFit="fill"></video>
    </swiper-item>
  </block>
</swiper>

