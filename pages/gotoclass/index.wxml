<swiper  autoplay="{{autoplay}}" current="{{current}}" >
  <block wx:for="{{video}}" wx:key="{{index}}">
    <swiper-item catchtouchmove="stopTouchMove">
        <video id="myVideo{{index}}" src="{{item.url}}" controls bindtimeupdate="update" data-index="{{index}}" auto-pause-if-navigate></video>
    </swiper-item>
  </block>
</swiper>

<view class="classnum">
  <text wx:for="{{classNum}}"  wx:key="{{index}}" data-index="{{index}}" bindtap="playVideo">{{item}}</text>
</view>