.p-wrapper{
	width: 100%;
	height: 100%
}
.info {
	width: 100%;
	height: 613rpx;
	position: relative;
}

.info .bg{
	z-index: -1;
	position: absolute;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%
}

.price {
	position: absolute;
	left: 50%;
	top: 50%;
	transform: translate(-45%, -45%);
}


.price .p {
	font-size: 48rpx;
	font-weight: bold;
	border-bottom: 10rpx dotted #000;
	padding-bottom: 10rpx;
	display: inline-block;
}

.price .s {
	color: #1C1B1B;
	font-size: 30rpx;
	margin: 22rpx 0;
}

.price .line {
	width: 472rpx;
	height: 0rpx;
	border-bottom: 4rpx dashed #1c1c1c;
}

.pay {
  margin-top: 120rpx;
}
.pay > .way{
	font-size: 48rpx;
	font-weight: bold;
	color: #1C1B1B;
	margin: 55rpx 0;
	text-align: center;  
}

.pay .btns {
	display: flex;
	justify-content: center;
	align-items: center;
}
.pay .btn {
	width: 400rpx;
	height: 100rpx;
	padding: 0;
	background-color: #fff;
	margin: 15rpx;
}
.pay .btn > .icon {
	width: 100%;
	height: 100%;
}

.pay .btn::after{
	border: none;
}