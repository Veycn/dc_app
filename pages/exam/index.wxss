/* pages/exam/index.wxss */
.clock-list {
	width: 682rpx;
	height: 84rpx;
	margin: 0 auto;
	display:flex;
	flex-direction:row;
	justify-content: space-between;
	align-items: center;
	color:#626262;
}
.clock-list button {
	border-radius: 4rpx;
	padding:0rpx;
	margin:0rpx;
	display: inline-block;
	line-height: 44rpx;
	width: 96rpx;
	font-size: 30rpx;
	text-align: center;
	border: 1rpx solid #ccc;
}
.clock-list button::after { 
	border:none;
}
.pass {
	background-color:#ffffff;
	color:#626262;
}
.button-hover{ 
	color:#fff;
	background-color: rgb(19, 109, 184);
}
.timer{
	font-size: 34rpx;
	display: table-cell;
}
.answer-card {
	width: 240rpx;
	line-height: 44rpx;
	text-align: center;
	font-size: 30rpx;
}
.answer-card text {
	margin-left: 8rpx;
}
.topic-wrap {
	width: 100%;
	height: 1334rpx;
}
.topic-wrap swiper {
	height: 100%;
}
.topic-wrap swiper image {
	width: 100%;
}
.topic-img {
  height:840rpx;
}
.btn-wrap {
	width: 640rpx;
	height: 120rpx;
	display: flex;
	margin: 50rpx auto 0;
	justify-content: space-between;
	align-items: center;
}
.btn-item {
	width: 118rpx;
	line-height: 118rpx;
	text-align: center;
	border-radius: 50%;
	border: 1rpx solid #ccc;
}
.submit {
	width: 650rpx;
	line-height: 94rpx;
	text-align: center;
	position: fixed;
	bottom: 52rpx;
	left: 50%;
	transform: translate(-50%);
	border-radius: 6rpx;
	font-size: 34rpx;
	font-family: "Adobe Heiti Std R";
}


.img{
	width: 34rpx;
}
.item-one{
	width: 120rpx;
	line-height: 34rpx;
	display:flex;
	justify-content: flex-start;
}
.item-text{
	width: 57rpx;
	line-height: 34rpx;
	color:#626262;
	margin-left: 8rpx;
}
