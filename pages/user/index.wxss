/* pages/user/index.wxss */
page {
  background:rgba(251,251,251,1);
}
.userInfo {
  height: 236rpx;
  padding: 0rpx 58rpx 58rpx;
  display: flex;
  align-items: center;
}
.userInfo image {
  width: 148rpx;
  height: 148rpx;
}
.userName {
    margin-left: 36rpx;
    font-size: 35rpx;
}

.operate {
  padding: 0 62rpx;
  box-sizing: border-box;
}
.common {
  padding: 0 28rpx;
  margin-bottom: 28rpx;
  width: 570rpx;
  height: 106rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background:rgba(255,255,255,1);
  box-shadow:0px 2rpx 6rpx 0px rgba(50,55,53,0.05);
  border-radius:12rpx;
}
.common image {
  width: 25rpx;
  height: 25rpx;
}

.common.btn{
  width: 100%;
}
.common.btn::after {
  border: none;
}


.logout{
  width: 100%;
  position: absolute;
  bottom: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.logout .btn{
  width: 588rpx;
  height: 80rpx;
  text-align: center;
  color: #434343;
  background-color: rgb(240, 240, 240);
  line-height: 80rpx;
}

.loginbtn {
  font-weight: bold;
  width: 300rpx;
}
.loginbtn::after{
  border: none;
}