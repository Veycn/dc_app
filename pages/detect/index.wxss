.p-container {
    width: 100%;
    height: 100%;
    background: rgb(240, 242, 245);
}

.banner {
    width: 100%;
    height: 294rpx;
    border: 1px solid #ccc;
}

.header {
    background: #fff;
}
.header .chapter .img {
    width: 120rpx;
    height: 74rpx;
    vertical-align: middle;
}
.header .chapter {
    box-sizing: border-box;
    padding: 40rpx 40rpx 10rpx;
}
.header .chapter .txt {
    font-weight: bold;
    font-size: 48rpx;
    position: relative;
    top: 4rpx;
    left: -60rpx;
}
.header .chapter .tip {
    font-size: 24rpx;
    color: #1C1B1B;
    text-indent: 2.5em;
}

.scroll .scroller {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    white-space: nowrap;
}

.scroll .scroller .item {
    display: inline-block;
    width: 250rpx;
    height: 60rpx;
    text-align: center;
    font-size: 30rpx;
    font-weight: bold;
}

.scroll .scroller .item._active {
    color: #24DD88;
}
.scroll .scroller .item._active::after{
    content: '';
    display: block;
    position: relative;
    left: 75rpx;
    top: 16rpx;
    width: 100rpx;
    height: 4rpx;
    background: #24DD88;
}

