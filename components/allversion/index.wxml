<!--components/allversion/index.wxml-->
<view class="all-wrap">
	<block wx:for="{{ allVersion }}" wx:key="index">
		<block wx:if="{{ index%2 === 0}}">
			<view class="all-item all-item-left {{ choosed === index ? 'active' : '' }}" bindtap="chooseVersion" data-index="{{ index }}">
				{{ item }}
			</view>
		</block>
		<block wx:else="{{ index%2 === 1}}">
			<view class="all-item all-item-right {{ choosed === index ? 'active' : '' }}" bindtap="chooseVersion" data-index="{{ index }}">
				{{ item }}
			</view>
		</block>
	</block>
</view>

