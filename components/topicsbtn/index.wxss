/* components/topicsbtn/index.wxss */
.container{
  width: 100%;
  height: 400rpx;
  box-sizing: border-box;
  padding: 0 50rpx;
  margin-top: 39rpx;
}
.container .default {
  display: inline-block;
  width: 60rpx;
  text-align: center;
  border-radius: 50%;
  font-size: 30rpx;
  line-height: 60rpx;
  margin: 0 12rpx;
  margin-bottom: 20rpx;
  font-family: 'Adobe Heiti Std R';
  border: 1px solid rgba(230,230,230,1);
}
.init {
  background-color: #ffffff;
  color: #626262;
}

.active {
  background-color: #15DA7F;
  color: #ffffff;
}
.tip {
  width: 400rpx;
  line-height: 60rpx;
  background-color:rgb(21, 236, 137);
  border-radius: 30rpx;
  margin: 60rpx auto 30rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
}