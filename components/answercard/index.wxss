/* components/answercard/index.wxss */
.container {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(121, 121, 121, .6);
  z-index: 1;
}
.content {
  width: 100%;
  height: 595rpx;
  background: #fff;
  position: absolute;
  bottom: 0;
  border-radius: 20rpx 20rpx 0 0;
  box-sizing: border-box;
  padding-top: 100rpx;
  z-index: 2;
}
.exit {
  position: absolute;
  right: 28rpx;
  top: 41rpx;
}
.exit .img{
  width: 34rpx;
  height: 34rpx;
}

.btn {
  position: absolute;
  bottom: 39rpx;
  left: 50%;
  transform: translateX(-50%);
}
.tip {
  width: 640rpx;
  line-height: 80rpx;
  background-color:#ccc;
  border-radius: 12rpx;
  margin: 190rpx auto 0;
  text-align: center;
  color: #353535;
  font-size: 28rpx;
}