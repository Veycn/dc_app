/* components/tipWindows/index.wxss */
.t-container {
  width: 100%;
  height: 100%;
  background-color: rgba(30,29,29,0.5);
  position: fixed;
  top: 0;
}
.t-container .wrap {
  width: 500rpx;
  height: 254rpx;
  border-radius: 20rpx;
  overflow: hidden;
  margin: 557rpx auto;
  background-color: #fff;
  position: relative;
}
.t-container .wrap .tip-logo {
  width: 100%;
  height: 81rpx;
  background-color: #2B2B2B;
  position: relative;
}
.t-container .wrap .tip-logo image {
  width: 52rpx;
  position: absolute;
  top: 14rpx;
  right: 19rpx;
}
.t-container .wrap .tip-text {
  position: absolute;
  left: 33rpx;
  bottom: 109rpx;
  color: #FF0000;
  font-size: 36rpx;
}