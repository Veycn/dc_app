/* components/grcourse/index.wxss */
/* components/mylesson/index.wxss */
.lesson {
  width: 696rpx;
  height: 340rpx;
  margin: 10rpx auto;
  border: 1px dashed #ccc;
  position: relative;
}
.edi {
  position: absolute;
  left: 0;
  top:0;
  font-size: 20rpx;
}
.edi>text {
  display: block;
  width: 79rpx;
  height: 32rpx;
  text-align: center;
  background-color: #78b5cf;
}
.title {
  width: 664rpx;
  margin: 40rpx auto 20rpx;
  font-size: 28rpx;
  height: 90rpx;
  line-height: 90rpx;
}
.desc {
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  width: 484rpx;
  margin: 20rpx auto 0;
  align-items:center;
}
.desc image {
  width: 76rpx;
  height: 76rpx;
  overflow: hidden;
  border-radius: 50%;
  border: 1px solid black;
}
.study {
  display: flex;
  width: 664rpx;
  margin: 40rpx auto 0;
  justify-content: space-between;
  align-items: center;
}
.study text:first-child {
  color: #B5B5B5;
  font-size: 20rpx;
}
.study text:last-child {
  background-color:  #78b5cf;
  width: 166rpx;
  height: 62rpx;
  line-height: 62rpx;
  text-align: center;
    font-size: 24rpx;
}
.time {
  position: absolute;
  right: 200rpx;
  bottom:5rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.time-hidden {
  display: none;
}
.time text {
  font-size: 24rpx;
  color: #353535;
}
.time .red {
  color: #E64340;
}
.mask {
position: fixed;
top: 0;
left: 0;
width: 100%;
height: 100%;
z-index: 1000;
background:rgba(0, 0, 0, 0.3);
display: block;
}
.mask-hidden {
  display: none;
}
.courecancel {
  width: 468rpx;
  height: 352rpx;
  background-color: #fff;
  position: relative;
  border-radius: 20rpx;
  left: 50%;
  margin-left: -234rpx;
  top: 50%;
  margin-top: -176rpx;
}
.courecancel>image {
  width: 34rpx;
  height: 34rpx;
  position: absolute;
  right: 5rpx;
  top: 5rpx;
}
.courecancel>text {
  font-size: 30rpx;
}
.hint{
  position: absolute;
  left: 160rpx;
  top: 100rpx;
}
.confirm {
  position: absolute;
  bottom: 40rpx;
  left: 20rpx;
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border: 1px solid #ccc;
}
.deny {
  position: absolute;
  bottom: 40rpx;
  right: 20rpx;
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border: 1px solid #ccc;
  background-color: rgb(19, 109, 184);
}