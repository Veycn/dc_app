<!--components/knoblist/index.wxml-->
<view class="sec-wrap">
  <view class="sec-logo {{seclist.submitStatus !== 0 ? 'active' : 'default'}}"></view>
  <view class="sec-content">
    <span class="sec-name">{{seclist.section}}</span><span wx:if="{{seclist.submitStatus !== 0}}" class="sec-pro">正确率：  {{T.Trans(seclist.ratio * 100)}}%</span>
  </view>
  <block wx:if="{{seclist.submitStatus !== 0}}">
    <view class="sec-sum"><view class="sec-part" style="width:{{seclist.ratio*400}}rpx;"></view></view>
  </block>
  <block wx:else>
    <view class="sec-notest">点击进行认知检测</view>
  </block>
</view>


<wxs module="T">
  function TransNumber(num){
    return Math.floor(num);
  }
  module.exports.Trans = TransNumber
</wxs>